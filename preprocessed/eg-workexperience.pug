//- FUNCTIONS
//- ====================================================
mixin timelineitem-edu(time, title)
	.separator.text-primary
		time= time
	article.card.bg-primary.text-white
		.card-header.icon.bg-primary
			i.fas.fa-graduation-cap
		.card-header
			h2.card-title= title
		.card-body
			if block
				block
mixin timelineitem-work(time, title)
	.separator.text-info
		time= time
	article.card.bg-info.text-white
		.card-header.icon.bg-info
			i.fas.fa-building
		.card-header
			h2.card-title= title
		.card-body
			if block
				block
mixin timelineimage
	article.card.card-outline
		.card-body
			if block
				block
